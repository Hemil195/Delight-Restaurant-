@model RestaurantOrderSystem.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash text-danger"></i> Delete Category</h2>
    
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning!</strong> You are about to delete this category. This action cannot be undone and may affect menu items in this category.
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Confirm Deletion</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded"
                             onerror="this.src='/images/categories/default-category.jpg'">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                            <i class="fas fa-list fa-3x text-muted"></i>
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <h4>@Model.Name</h4>
                    <p class="text-muted">@(Model.Description ?? "No description provided.")</p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note:</strong> Deleting this category may affect menu items that belong to it. Please ensure all menu items are properly categorized before deletion.
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("DeleteCategory", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoryID)
        
        <div class="mt-4">
            <div class="d-flex justify-content-between">
                @Html.ActionLink("Cancel", "Categories", "Admin", null, new { @class = "btn btn-outline-secondary" })
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this category?')">
                    <i class="fas fa-trash"></i> Yes, Delete This Category
                </button>
            </div>
        </div>
    }
</div>