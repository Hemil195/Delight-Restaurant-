@model RestaurantOrderSystem.Models.MenuItem

@{
    ViewBag.Title = "Delete Menu Item";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash text-danger"></i> Delete Menu Item</h2>
    
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning!</strong> You are about to delete this menu item. This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Confirm Deletion</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded"
                             onerror="this.src='/images/menu/default-food.jpg'">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                            <i class="fas fa-utensils fa-3x text-muted"></i>
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <h4>@Model.Name</h4>
                    <p class="text-muted">@(Model.Description ?? "No description provided.")</p>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                        
                        @if (Model.Category != null)
                        {
                            <dt class="col-sm-3">Category:</dt>
                            <dd class="col-sm-9">@Model.Category.Name</dd>
                        }
                        
                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unavailable</span>
                            }
                            
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-warning text-dark">Featured</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("DeleteMenuItem", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ItemID)
        
        <div class="mt-4">
            <div class="d-flex justify-content-between">
                @Html.ActionLink("Cancel", "MenuItems", "Admin", null, new { @class = "btn btn-outline-secondary" })
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this menu item?')">
                    <i class="fas fa-trash"></i> Yes, Delete This Item
                </button>
            </div>
        </div>
    }
</div>