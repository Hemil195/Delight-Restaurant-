@model IEnumerable<RestaurantOrderSystem.Models.MenuItem>

@{
    ViewBag.Title = "Manage Menu Items";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-utensils"></i> Manage Menu Items</h2>
        @Html.ActionLink("Add New Item", "CreateMenuItem", "Admin", null, new { @class = "btn btn-primary" })
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Available</th>
                                <th>Featured</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(!item.IsAvailable ? "table-secondary" : "")">
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;"
                                                 onerror="this.src='/images/menu/default-food.jpg'">
                                        }
                                        else
                                        {
                                            <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="fas fa-utensils text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br><small class="text-muted">@item.Description.Substring(0, Math.Min(50, item.Description.Length))@(item.Description.Length > 50 ? "..." : "")</small>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Category != null)
                                        {
                                            <span class="badge bg-secondary">@item.Category.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Category</span>
                                        }
                                    </td>
                                    <td class="price-display">
                                        <strong><span class="rupee-symbol">&#8377;</span>@item.Price.ToString("N0")</strong>
                                    </td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Unavailable</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <span class="badge bg-warning text-dark">Featured</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            @Html.ActionLink("Edit", "EditMenuItem", "Admin", new { id = item.ItemID }, new { @class = "btn btn-sm btn-outline-primary" })
                                            @Html.ActionLink("Delete", "DeleteMenuItem", "Admin", new { id = item.ItemID }, new { @class = "btn btn-sm btn-outline-danger" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
            <h4>No Menu Items Found</h4>
            <p class="text-muted">Get started by adding your first menu item.</p>
            @Html.ActionLink("Add First Menu Item", "CreateMenuItem", "Admin", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    }

    <div class="mt-4">
        <div class="d-flex justify-content-between">
            @Html.ActionLink("Back to Dashboard", "Dashboard", "Admin", null, new { @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Manage Categories", "Categories", "Admin", null, new { @class = "btn btn-outline-info" })
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .rupee-symbol {
            font-family: Arial, sans-serif;
            font-weight: bold;
        }
        .price-display {
            font-weight: 600;
        }
    </style>
    
    <script>
        $(document).ready(function() {
            // Convert HTML entities to actual rupee symbols
            $('.rupee-symbol').each(function() {
                if ($(this).text() === '&#8377;') {
                    $(this).html('?');
                }
            });
            
            // Fallback: if still showing question marks, replace with Rs.
            $('.price-display').each(function() {
                var text = $(this).text();
                if (text.includes('?')) {
                    $(this).html(text.replace('?', '<strong>Rs.</strong> '));
                }
            });
        });
    </script>
}