@model RestaurantOrderSystem.Models.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Welcome to Veg Delight Restaurant";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="display-4 fw-bold mb-3">🥗 Welcome to Veg Delight Restaurant</h1>
                <div class="mb-4">
                    <span class="veg-hero-badge">🌱 100% Pure Vegetarian</span>
                </div>
                <p class="lead mb-4">Experience authentic Indian vegetarian cuisine made with the freshest ingredients and traditional recipes. Order online for home delivery or takeaway!</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    @Html.ActionLink("🍽️ Browse Our Menu", "Index", "Menu", null, new { @class = "btn btn-light btn-lg me-md-2" })
                    @Html.ActionLink("📋 Track Your Order", "Track", "Order", null, new { @class = "btn btn-outline-light btn-lg" })
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Quick Stats -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white h-100 stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-leaf fa-3x mb-3"></i>
                    <h3>@Model.TotalMenuItems</h3>
                    <p class="card-text">Delicious Vegetarian Items</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-dark h-100 stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-heart fa-3x mb-3"></i>
                    <h3>@Model.TotalOrders</h3>
                    <p class="card-text">Happy Customers Served</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white h-100 stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-3x mb-3"></i>
                    <h3>@Model.Categories.Count</h3>
                    <p class="card-text">Cuisine Categories</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <section class="mb-5">
        <div class="row">
            <div class="col-md-12 text-center mb-4">
                <h2 class="fw-bold text-success">🌟 Why Choose Veg Delight?</h2>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center feature-card">
                    <div class="feature-icon mb-3">🌱</div>
                    <h5>100% Vegetarian</h5>
                    <p class="text-muted">Pure vegetarian kitchen with no compromise on taste</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center feature-card">
                    <div class="feature-icon mb-3">🥘</div>
                    <h5>Authentic Flavors</h5>
                    <p class="text-muted">Traditional Indian recipes passed down through generations</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center feature-card">
                    <div class="feature-icon mb-3">🚚</div>
                    <h5>Quick Delivery</h5>
                    <p class="text-muted">Hot and fresh food delivered to your doorstep</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center feature-card">
                    <div class="feature-icon mb-3">💰</div>
                    <h5>Best Prices</h5>
                    <p class="text-muted">Affordable rates without compromising quality</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Items -->
    @if (Model.FeaturedItems != null && Model.FeaturedItems.Any())
    {
        <section class="mb-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">⭐ Chef's Special Recommendations</h2>
                <p class="text-muted">Try our most popular vegetarian dishes</p>
            </div>
            <div class="row">
                @foreach (var item in Model.FeaturedItems.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 featured-item-card">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" 
                                         onerror="this.src='/images/menu/default-veg.jpg'">
                                }
                                else
                                {
                                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(45deg, #28a745, #20c997);">
                                        <i class="fas fa-leaf fa-3x text-white"></i>
                                    </div>
                                }
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-success">🌱 Veg</span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-success">@item.Name</h5>
                                <p class="card-text flex-grow-1">@(item.Description ?? "Delicious vegetarian dish made with fresh ingredients and authentic spices.")</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 price-tag mb-0">₹@item.Price.ToString("N0")</span>
                                    @Html.ActionLink("Order Now", "Details", "Menu", new { id = item.ItemID }, new { @class = "btn btn-success btn-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center">
                @Html.ActionLink("🍽️ View Full Menu", "Index", "Menu", null, new { @class = "btn btn-success btn-lg" })
            </div>
        </section>
    }

    <!-- Categories Section -->
    @if (Model.Categories != null && Model.Categories.Any())
    {
        <section class="mb-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">🍛 Browse by Category</h2>
                <p class="text-muted">Explore our diverse range of vegetarian culinary offerings</p>
            </div>
            <div class="row">
                @foreach (var category in Model.Categories.Take(6))
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm category-card">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 150px; object-fit: cover;"
                                     onerror="this.src='/images/categories/default-category.jpg'">
                            }
                            else
                            {
                                <div class="card-img-top bg-gradient text-white d-flex align-items-center justify-content-center" style="height: 150px; background: linear-gradient(45deg, #28a745, #20c997);">
                                    <i class="fas fa-utensils fa-2x"></i>
                                </div>
                            }
                            <div class="card-body text-center">
                                <h6 class="card-title text-success">@category.Name</h6>
                                <p class="card-text small text-muted">@(category.Description ?? "Fresh vegetarian options")</p>
                                @Html.ActionLink("Browse Items", "Index", "Menu", new { categoryId = category.CategoryID }, new { @class = "btn btn-sm btn-outline-success" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Special Offers -->
    <section class="mb-5">
        <div class="card bg-gradient text-white special-offers-card">
            <div class="card-body text-center py-5">
                <h2 class="fw-bold mb-3">🎉 Special Offers</h2>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="offer-item">
                            <h4>🚚 Free Delivery</h4>
                            <p>On orders above ₹500</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="offer-item">
                            <h4>⏰ Quick Service</h4>
                            <p>Ready in 30 minutes or less</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="offer-item">
                            <h4>💯 Fresh Guarantee</h4>
                            <p>Made fresh for every order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-light py-5 rounded mb-5">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-3 text-success">🍽️ Ready to Order Delicious Vegetarian Food?</h2>
                    <p class="lead mb-4">Browse our complete menu of authentic vegetarian dishes and place your order for quick delivery or pickup</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        @Html.ActionLink("🛒 Order Now", "Index", "Menu", null, new { @class = "btn btn-success btn-lg me-md-2" })
                        @Html.ActionLink("📞 Contact Us", "Contact", "Home", null, new { @class = "btn btn-outline-success btn-lg" })
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 80px 0;
        }
        .veg-hero-badge {
            background: rgba(255,255,255,0.2);
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: bold;
            display: inline-block;
            backdrop-filter: blur(10px);
        }
        .stats-card {
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .feature-card {
            padding: 20px;
            transition: transform 0.3s ease;
        }
        .feature-card:hover {
            transform: translateY(-3px);
        }
        .feature-icon {
            font-size: 3rem;
        }
        .featured-item-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease;
            border-left: 4px solid #28a745;
        }
        .featured-item-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
        .price-tag {
            color: #28a745;
            font-weight: bold;
            font-size: 1.2rem;
        }
        .special-offers-card {
            background: linear-gradient(135deg, #fd7e14 0%, #e63946 100%);
        }
        .offer-item {
            padding: 15px;
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            margin: 10px;
            backdrop-filter: blur(5px);
        }
    </style>
}