@model RestaurantOrderSystem.Models.MenuItem

@{
    ViewBag.Title = "Delete Menu Item";
}

<h2>Delete Menu Item</h2>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this menu item?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Menu Item Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price, "{0:C}")
            </dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this menu item?')" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>
}